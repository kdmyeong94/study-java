package day11;

public class ArrayTest3 {

	public static void main(String[] args) {

		// 2차원 배열
		
		// 자료형[][] 배열명 = new 자료형[행][열];
		
		char[][] ch = new char[3][3];
		
		char[][] ch2 = {
				{'*', ' ', ' '},
				{'*', '*', ' '},
				{'*', '*', '*'}
		};

		for(int i = 0; i < ch2.length; i++) {
			
//			ch2[0] == {'*', ' ', ' '}
			for(int j = 0; j < ch2[i].length; j++) {
				System.out.print(ch2[i][j]);
			}
			System.out.println();
		}
		
		char[][] ch3 = {
				{' ', ' ', '*'},
				{' ', '*', '*'},
				{'*', '*', '*'}
			
		};
		
			for(int i = 0; i < ch2.length; i++) {
				for(int j = 0; j < ch2[i].length; j++) {
					System.out.print(ch2[i][j]);
				}
				System.out.println();
			}
		
		
	}

}
